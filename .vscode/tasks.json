{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build Photoshop plugin",
            "command": "C:/Program Files/Microsoft Visual Studio/2022/Community/VC/Tools/MSVC/14.33.31629/bin/Hostx64/x64/cl.exe",
            "args": [
                "/EHsc",
                "/LD",
                "/I/${workspaceFolder}/PhotoshopSDK/headers",
                "/link",
                "/LIBPATH:${workspaceFolder}/PhotoshopSDK/libs",
                "/OUT:${workspaceFolder}/YourPlugin.8li",
                "PICA_sp.lib",
                "PICA_ui.lib",
                "${workspaceFolder}/main.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
